# Server Configuration
PORT=3000
HOST=0.0.0.0

# Authentication
JWT_SECRET=change-this-to-a-random-secure-string-at-least-32-characters-long
JWT_EXPIRES_IN=24h
USERNAME=admin
PASSWORD=change-this-password

# File System
# Root directory for file operations (defaults to user home directory if not set)
FS_ROOT_DIR=

# Terminal Configuration
# Default shell (auto-detected if not set)
DEFAULT_SHELL=
# Terminal session timeout in minutes
SESSION_TIMEOUT=30

# CORS (comma-separated origins, or * for all)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
